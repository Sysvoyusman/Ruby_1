<h1 aling="center">Create new Category</h1>
<%= render 'shared/errors' , obj: @category %>

<div class = 'row'>
    <div calss = 'col-md-12'>
        <%-#form for helper - we already haev it so we willnt include form-horizebtal-%>
        <%= form_for(@category, :html => {class: "form-horizontal" , role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2 ">
                                                                      
                <%= f.label :name %>
                
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class:"form-control" , placeholder: "category name", autofocus: true %>
                </div>
            </div>    
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 ">        
                    <%-#buttons arent creating problem why? may be its because of submit button , Yes-%>
                    <%-#first it will check if the user is going to be a new one or not-%>                                               
                    <%= f.submit class: 'btn btn-primary btn-lg' %> 
                </div>
            </div>


        <% end %>
        <div class= "col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and Return to articles page", articles_path %> ] 
        </div>
    </div>
</div>