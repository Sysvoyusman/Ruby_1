 <h1 align="center">Showing all the users</h1>
 <%-#first one is for size and second one is for position-%>
 <div class="well col-md-8 col-md-offset-2">    
    <% @users.each do |user| %>
        <div class="well col-md-4 col-md-offset-4">
            <li> <%= link_to gravatar_for(user) , user_path(user) %>
            <li class="article-title">
                <%= link_to user.username, user_path(user) %>
            </li>
            <li><small><%= pluralize(user.articles.count , "article") if user.articles %></small></li>
        </div>
    <% end %>
</div>